set showcmd
set showmatch
set nocompatible
set backspace=indent,eol,start
set textwidth=0
set ruler
set number

" Wrap config
set nowrap
set sidescroll=1

" Error bell
set novisualbell
set noerrorbells

" Search config
set hlsearch
set incsearch
set noignorecase
set smartcase

" Indent config
set autoindent
set smartindent
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4
set shiftround

if &term == "xterm"
    if has("terminfo")
        set t_Co=8
        set t_Sf=^[[3%p1%dm
        set t_Sb=^[[4%p1%dm
    else
        set t_Co=8
        set t_Sf=^[[3%dm
        set t_Sb=^[[4%dm
    endif
endif

" Remap move cursor
nnoremap <C-H> ^
nnoremap <C-L> $
nnoremap <C-J> <C-d>
nnoremap <C-K> <C-u>

syntax on  " Syntax highlight

" Specify file config
filetype plugin indent on
autocmd Filetype yaml set tabstop=2 shiftwidth=2 softtabstop=2

" Theme
set t_Co=256
colorscheme desert
hi Normal ctermbg=none
hi LineNr ctermfg=246 ctermbg=none
hi Comment ctermfg=241
